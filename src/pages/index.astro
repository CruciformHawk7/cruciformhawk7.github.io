---

import Main from "../layouts/main.astro";---

<Main title="Astro App">
    <main>
        <section class="flex w-full items-center justify-between h-[32rem]">
            <div class="leading-tight">
                <h1 class="pl-20">Hey there!
                    <br />
                    I'm <span class="text-gradient">Nikhil</span>.
                </h1>
            </div>
            <div></div>
        </section>
    </main>
</Main>

<style>
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-clip: text;
        background-repeat: repeat-x;
        background-position: 0;
    }

    @media (prefers-reduced-motion: no-preference) {
        .text-gradient {
            background-image: url("./blobs-mirror-cut-o.svg");
            animation: text-gradient-anim 60s linear infinite forwards;
        }

        @keyframes text-gradient-anim {
            0% {
                background-position: 0 0;
            }
            100% {
                background-position: 400% 0;
            }
        }
    }
</style>
